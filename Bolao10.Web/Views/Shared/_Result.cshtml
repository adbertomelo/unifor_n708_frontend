

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-info">
        <a class="close" data-dismiss="alert">×</a>
        <p>
            @TempData["Mensagem"]
        </p>
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">×</a>
        <p>
            @TempData["Erro"]
        </p>
    </div>
}
